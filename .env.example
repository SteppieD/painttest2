# Paint Quote Pro - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED FOR PRODUCTION
# ============================================

# Supabase Configuration (Required)
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# OPTIONAL - AI SERVICES
# ============================================
# If not set, the app will use mock data for quotes

# OpenAI API Key (for GPT-4 quotes)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude quotes)
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-...

# Google AI API Key (for Gemini quotes)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIza...

# ============================================
# OPTIONAL - EMAIL SERVICE
# ============================================

# Resend Email Service
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# OPTIONAL - PAYMENT PROCESSING
# ============================================

# Stripe Payment Processing
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard > Products)
NEXT_PUBLIC_STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PRICE_ID=price_...

# ============================================
# OPTIONAL - ANALYTICS & MONITORING
# ============================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-...

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking
SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# ============================================
# APPLICATION SETTINGS
# ============================================

# Node Environment
NODE_ENV=development

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# JWT Secret for admin authentication (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-make-it-random-and-long

# Application URL (for emails, callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# ============================================
# DEVELOPMENT ONLY
# ============================================

# SQLite Database Path (local development)
DATABASE_URL=file:./painting_quotes_app.db

# Debug Mode
DEBUG=false

# ============================================
# DEPLOYMENT PLATFORM SPECIFIC
# ============================================

# Vercel-specific
# VERCEL_URL is automatically set by Vercel

# Railway-specific
# PORT is automatically set by Railway

# Render-specific
# RENDER_EXTERNAL_URL is automatically set by Render